{
    "models_path": "./models",
    "analyzers": {
        "ml_based": {
            "model_path": "./models/ml_model",
            "batch_size": 16,
            "epochs": 3,
            "learning_rate": 2e-5
        },
        "rule_based": {
            "rules_path": "./models/rules.json",
            "patterns": {
                "메뉴평가": {
                    "긍정": ["맛있", "좋", "최고"],
                    "부정": ["별로", "실망", "최악"],
                    "weight": 2.0
                },
                "서비스평가": {
                    "긍정": ["친절", "빠르", "깔끔"],
                    "부정": ["불친절", "느리", "더러움"],
                    "weight": 1.0
                }
            }
        },
        "word_embedding": {
            "model_path": "./models/word2vec.model",
            "vector_size": 100,
            "window": 5,
            "min_count": 2,
            "workers": 4
        }
    },
    "hybrid": {
        "weights": {
            "ml_based": 0.4,
            "rule_based": 0.3,
            "word_embedding": 0.3
        }
    }
}